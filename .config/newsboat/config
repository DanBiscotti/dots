browser "w3m %u"
macro y set browser "mpv %u"; open-in-browser ; set browser "w3m %u"

# Podboat items
podcast-auto-enqueue yes
download-path "~/media/podcasts/%n"
download-filename-format "%F %t.%e"
podlist-format "%b"
max-downloads 3
player "mpc clear && mpc add %u && mpc play"
